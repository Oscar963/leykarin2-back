AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Configuración de Clave Única
CLAVEUNICA_CLIENT_ID=   # <--- Client ID proporcionado por Clave Única
CLAVEUNICA_CLIENT_SECRET=   # <--- Client Secret proporcionado por Clave Única
CLAVEUNICA_REDIRECT_URI=http://localhost:8000/api/v1/auth/claveunica/callback   # <--- URL de callback

# ========================================
# CONFIGURACIÓN DE GOOGLE OAUTH
# ========================================

# Claves de Google OAuth (obtener de Google Cloud Console)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Configuración de dominio corporativo (opcional - para restringir acceso)
GOOGLE_ALLOWED_DOMAIN=municipalidadarica.cl

# Configuración de seguridad OAuth
GOOGLE_OAUTH_ENABLED=true
GOOGLE_OAUTH_AUTO_REGISTER=false   # Si false, solo usuarios pre-registrados pueden acceder

# Configuración SSL para desarrollo local (solo para testing)
CURL_CA_BUNDLE_PATH=

# Frontend URL para redirecciones
FRONTEND_URL=http://localhost:3000   # <--- URL del frontend

VITE_APP_NAME="Leykarin Backend"
VITE_PUSHER_APP_KEY=
VITE_PUSHER_HOST=
VITE_PUSHER_PORT=
VITE_PUSHER_SCHEME=
VITE_PUSHER_APP_CLUSTER=

# ========================================
# CONFIGURACIÓN DE SEGURIDAD Y COOKIES
# ========================================

# Para desarrollo local
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax
SESSION_DOMAIN=localhost

# Para producción (cambiar según entorno)
# SESSION_SECURE_COOKIE=true
# SESSION_SAME_SITE=none
# SESSION_DOMAIN=.imaarica.cl

SANCTUM_STATEFUL_DOMAINS=localhost:4200,127.0.0.1:4200,leykarin2.imaarica.cl

CORS_ALLOWED_ORIGINS=http://localhost:4200,https://leykarin2.imaarica.cl

# ========================================
# CONFIGURACIÓN DE RATE LIMITING
# ========================================

RATE_LIMIT_LOGIN=5,1
RATE_LIMIT_RESET_PASSWORD=3,1
RATE_LIMIT_LOGOUT=10,1
RATE_LIMIT_API=60,1
RATE_LIMIT_COMPLAINT_SUBMISSION=5,60
RATE_LIMIT_PDF_DOWNLOAD=10,1
RATE_LIMIT_RESEND_RECEIPT=3,1

# ========================================
# CONFIGURACIÓN DE LOGGING
# ========================================

SECURITY_LOG_CHANNEL=security
SECURITY_LOG_LEVEL=warning

FILE_UPLOAD_LOG_CHANNEL=file_uploads
FILE_UPLOAD_LOG_LEVEL=info

# ========================================
# CONFIGURACIÓN DE VALIDACIÓN DE ARCHIVOS
# ========================================

MAX_FILE_SIZE_PDF=20480
MAX_FILE_SIZE_IMAGE=5120
MAX_FILE_SIZE_DOCUMENT=10240

ALLOWED_FILE_EXTENSIONS_PDF=pdf
ALLOWED_FILE_EXTENSIONS_IMAGE=jpg,jpeg,png,gif
ALLOWED_FILE_EXTENSIONS_DOCUMENT=doc,docx,pdf

# Límites de archivos temporales
MAX_TEMPORARY_FILES_PER_SESSION=10
MAX_TEMPORARY_FILES_TOTAL_SIZE=52428800

# ========================================
# CONFIGURACIÓN DE RECAPTCHA v3
# ========================================

# Claves de reCAPTCHA (obtener de Google reCAPTCHA Admin Console)
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Configuración de validación
RECAPTCHA_ENABLED=true
RECAPTCHA_MIN_SCORE=0.5
RECAPTCHA_TIMEOUT=10

# ========================================
# CONFIGURACIÓN DE SWAGGER/API DOCS
# ========================================

L5_SWAGGER_GENERATE_ALWAYS=true
L5_SWAGGER_UI_DOC_EXPANSION=list
L5_SWAGGER_UI_OPERATIONS_SORTER=alpha

# ========================================
# CONFIGURACIÓN DE BASE DE DATOS
# ========================================

DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

DB_TEST_DATABASE=leykarin_test

# ========================================
# CONFIGURACIÓN DE CACHE
# ========================================

CACHE_ROLES_TTL=3600
CACHE_PERMISSIONS_TTL=3600

# ========================================
# CONFIGURACIÓN DE QUEUES
# ========================================

QUEUE_MAIL_CONNECTION=database
QUEUE_MAIL_TABLE=jobs

# ========================================
# CONFIGURACIÓN DE STORAGE
# ========================================

FILESYSTEM_DISK_PUBLIC=public
FILESYSTEM_DISK_PRIVATE=local

STORAGE_PATH_DECRETOS=decretos
STORAGE_PATH_VERIFICATIONS=verifications
STORAGE_PATH_TEMPLATES=templates

# ========================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ========================================

NOTIFICATION_MAIL_FROM_ADDRESS=noreply@municipalidadarica.cl
NOTIFICATION_MAIL_FROM_NAME="Sistema de denuncias Leykarin"

# ========================================
# CONFIGURACIÓN DE MONITOREO
# ========================================

SECURITY_MONITORING_ENABLED=true
SECURITY_ALERT_EMAIL=noreply@municipalidadarica.cl

AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# ========================================
# CONFIGURACIÓN DE DESARROLLO
# ========================================

DEVELOPMENT_MODE=false
DEBUG_BAR_ENABLED=false

TESTING_MODE=false
MOCK_EXTERNAL_SERVICES=true
